<div class="banner">
  <div><h1> MR COCKTAIL </h1></div>
  <div><%= link_to "Create a cocktail", new_cocktail_path %></div>
</div>
<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card">
      <div class="card-image" style="background-image: ">
        <%= image_tag "tomcollins.jpg", alt: "alttext" %>
      </div>
      <div class="card-title">
        <%= link_to cocktail.name.capitalize, cocktail_path(cocktail) %>
      </div>
      <div class= "card-content">
        <% cocktail.doses.each do |dose| %>
          <p>
            <%= dose.description %>
            <%= dose.ingredient.name %>
          </p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>


